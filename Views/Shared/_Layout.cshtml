<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Http
@using BusManagementSystem.Controllers
@{
    var isAdmin = Context.Session.GetString(AdminController.AdminSessionKey) == "true";
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusManagementSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BusManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <aside class="app-sidebar" id="appSidebar">
            <div class="app-sidebar-header">
                <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="sidebar-brand-icon">🚌</span>
                    <span class="sidebar-brand-text">Bus Management</span>
                </a>
                <button id="sidebarCollapseToggle" class="icon-button d-none d-lg-inline-flex" type="button" aria-label="Toggle sidebar">
                    <span class="icon-button-bar"></span>
                    <span class="icon-button-bar"></span>
                </button>
            </div>

            <nav class="app-sidebar-nav" aria-label="Main navigation">
                <div class="sidebar-section-label">Core</div>
                <ul class="sidebar-nav-list">
                    <li class="sidebar-nav-item @(currentController == "Home" ? "active" : "")">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="sidebar-icon">🏠</span>
                            <span class="sidebar-label">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item @(currentController == "Trips" ? "active" : "")">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Trips" asp-action="Index">
                            <span class="sidebar-icon">📅</span>
                            <span class="sidebar-label">Trips</span>
                        </a>
                    </li>
                    @if (isAdmin)
                    {
                        <li class="sidebar-nav-item @(currentController == "Bookings" ? "active" : "")">
                            <a class="sidebar-nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">
                                <span class="sidebar-icon">🎫</span>
                                <span class="sidebar-label">Bookings</span>
                            </a>
                        </li>
                        <li class="sidebar-nav-item @(currentController == "Passengers" ? "active" : "")">
                            <a class="sidebar-nav-link" asp-area="" asp-controller="Passengers" asp-action="Index">
                                <span class="sidebar-icon">👥</span>
                                <span class="sidebar-label">Passengers</span>
                            </a>
                        </li>
                        <li class="sidebar-nav-item @(currentController == "BusRoutes" ? "active" : "")">
                            <a class="sidebar-nav-link" asp-area="" asp-controller="BusRoutes" asp-action="Index">
                                <span class="sidebar-icon">🗺️</span>
                                <span class="sidebar-label">Routes</span>
                            </a>
                        </li>
                    }
                    <li class="sidebar-nav-item @(currentController == "Buses" ? "active" : "")">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Buses" asp-action="Index">
                            <span class="sidebar-icon">🚌</span>
                            <span class="sidebar-label">Buses</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-section-label mt-3">Account</div>
                <ul class="sidebar-nav-list">
                    <li class="sidebar-nav-item">
                        @if (isAdmin)
                        {
                            <a class="sidebar-nav-link" asp-controller="Admin" asp-action="Logout">
                                <span class="sidebar-icon">⏏️</span>
                                <span class="sidebar-label">Logout</span>
                            </a>
                        }
                        else
                        {
                            <a class="sidebar-nav-link" asp-controller="Admin" asp-action="Login">
                                <span class="sidebar-icon">👤</span>
                                <span class="sidebar-label">Admin Login</span>
                            </a>
                        }
                    </li>
                </ul>
            </nav>

            <div class="app-sidebar-footer d-none d-lg-flex">
                <div class="sidebar-status">
                    <span class="status-indicator"></span>
                    <span class="status-text">System healthy</span>
                </div>
            </div>
        </aside>

        <div class="app-main">
            <header class="app-topbar">
                <div class="topbar-left">
                    <button class="btn btn-outline-light d-inline-flex d-lg-none me-2"
                            type="button"
                            data-bs-toggle="offcanvas"
                            data-bs-target="#mobileSidebar"
                            aria-controls="mobileSidebar"
                            aria-label="Open navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="topbar-page-title">
                        <span class="topbar-eyebrow">Control Center</span>
                        <span class="topbar-title">@ViewData["Title"]</span>
                    </div>
                </div>
                <div class="topbar-right">
                    <div class="topbar-badge">
                        <span class="dot-online"></span>
                        <span class="topbar-badge-text">Live</span>
                    </div>
                </div>
            </header>

            <main role="main" class="app-content">
                @RenderBody()
            </main>

            <footer class="footer text-muted py-3 mt-auto">
                <div class="container-fluid text-center text-sm-start">
                    <span>&copy; 2025 - Bus Management System</span>
                    <span class="text-muted ms-sm-2">Optimized for modern operations</span>
                </div>
            </footer>
        </div>
    </div>

    <!-- Mobile offcanvas sidebar -->
    <div class="offcanvas offcanvas-start app-offcanvas" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="mobileSidebarLabel">Navigation</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <nav aria-label="Mobile navigation">
                <ul class="sidebar-nav-list">
                    <li class="sidebar-nav-item @(currentController == "Home" ? "active" : "")">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="sidebar-icon">🏠</span>
                            <span class="sidebar-label">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item @(currentController == "Trips" ? "active" : "")">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Trips" asp-action="Index">
                            <span class="sidebar-icon">📅</span>
                            <span class="sidebar-label">Trips</span>
                        </a>
                    </li>
                    @if (isAdmin)
                    {
                        <li class="sidebar-nav-item @(currentController == "Bookings" ? "active" : "")">
                            <a class="sidebar-nav-link" asp-area="" asp-controller="Bookings" asp-action="Index">
                                <span class="sidebar-icon">🎫</span>
                                <span class="sidebar-label">Bookings</span>
                            </a>
                        </li>
                        <li class="sidebar-nav-item @(currentController == "Passengers" ? "active" : "")">
                            <a class="sidebar-nav-link" asp-area="" asp-controller="Passengers" asp-action="Index">
                                <span class="sidebar-icon">👥</span>
                                <span class="sidebar-label">Passengers</span>
                            </a>
                        </li>
                        <li class="sidebar-nav-item @(currentController == "BusRoutes" ? "active" : "")">
                            <a class="sidebar-nav-link" asp-area="" asp-controller="BusRoutes" asp-action="Index">
                                <span class="sidebar-icon">🗺️</span>
                                <span class="sidebar-label">Routes</span>
                            </a>
                        </li>
                    }
                    <li class="sidebar-nav-item @(currentController == "Buses" ? "active" : "")">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Buses" asp-action="Index">
                            <span class="sidebar-icon">🚌</span>
                            <span class="sidebar-label">Buses</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item mt-3">
                        @if (isAdmin)
                        {
                            <a class="sidebar-nav-link" asp-controller="Admin" asp-action="Logout">
                                <span class="sidebar-icon">⏏️</span>
                                <span class="sidebar-label">Logout</span>
                            </a>
                        }
                        else
                        {
                            <a class="sidebar-nav-link" asp-controller="Admin" asp-action="Login">
                                <span class="sidebar-icon">👤</span>
                                <span class="sidebar-label">Admin Login</span>
                            </a>
                        }
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
