@model IEnumerable<BusManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="page-header">
    <div class="container">
        <h1>Bookings</h1>
        <p class="lead">Manage passenger bookings</p>
    </div>
</div>

<div class="container">
    <a asp-action="Create" class="btn-create">
        ➕ Create New Booking
    </a>

    <div class="table-container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TipId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PassengerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SeatNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingDate)
                    </th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>Trip #@Html.DisplayFor(modelItem => item.TipId)</strong>
                            </td>
                            <td>
                                Passenger #@Html.DisplayFor(modelItem => item.PassengerId)
                            </td>
                            <td>
                                <span class="badge bg-primary">Seat @Html.DisplayFor(modelItem => item.SeatNumber)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BookingDate)
                            </td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-details">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center empty-state">
                            <p class="mt-2" style="font-size: 48px;">📦</p>
                            <p class="mt-2">No bookings found. <a asp-action="Create">Create a new booking</a> to get started.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
