@model BusManagementSystem.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="page-header">
    <div class="container">
        <h1>Edit Booking</h1>
        <p class="lead">Update booking information</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group mb-3">
                        <label asp-for="TipId" class="form-label">Trip</label>
                        <select asp-for="TipId" class="form-control" asp-items="ViewBag.TipId">
                            <option value="">-- Select Trip --</option>
                        </select>
                        <span asp-validation-for="TipId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PassengerId" class="form-label">Passenger</label>
                        <select asp-for="PassengerId" class="form-control" asp-items="ViewBag.PassengerId">
                            <option value="">-- Select Passenger --</option>
                        </select>
                        <span asp-validation-for="PassengerId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SeatNumber" class="form-label">Seat Number</label>
                        <input asp-for="SeatNumber" type="number" class="form-control" placeholder="Enter seat number" />
                        <span asp-validation-for="SeatNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="BookingDate" class="form-label">Booking Date</label>
                        <input asp-for="BookingDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <a asp-action="Index" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
        </svg>
        Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
