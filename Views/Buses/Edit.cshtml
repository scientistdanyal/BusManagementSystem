@model BusManagementSystem.Models.Bus

@{
    ViewData["Title"] = "Edit Bus";
}

<div class="page-header">
    <div class="container">
        <h1>Edit Bus</h1>
        <p class="lead">Update bus information</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group mb-3">
                        <label asp-for="RegistrationNumber" class="form-label"></label>
                        <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Capacity" class="form-label"></label>
                        <input asp-for="Capacity" class="form-control" type="number" placeholder="Enter bus capacity" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter bus description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <a asp-action="Index" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
        </svg>
        Back to List
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
