@model BusManagementSystem.Models.Passenger

@{
    ViewData["Title"] = "Delete Passenger";
}

<div class="page-header">
    <div class="container">
        <h1>Delete Passenger</h1>
        <p class="lead">Remove passenger from the system</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <div class="alert alert-warning" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.16.16 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.16.16 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
            </svg>
            <strong>Warning!</strong> Are you sure you want to delete this passenger? This action cannot be undone.
        </div>
        
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-9 mb-3">
                <strong>@Html.DisplayFor(model => model.FullName)</strong>
            </dd>
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-9 mb-3">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9 mb-3">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete Passenger" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
