@model BusManagementSystem.Models.Passenger

@{
    ViewData["Title"] = "Passenger Details";
}

<div class="page-header">
    <div class="container">
        <h1>Passenger Details</h1>
        <p class="lead">View passenger information</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-9 mb-3">
                <strong>@Html.DisplayFor(model => model.FullName)</strong>
            </dd>
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-9 mb-3">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9 mb-3">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
